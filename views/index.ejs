    </body>
    <script>
        function toggleView(activeDiv, inactiveDiv, activeBtn, inactiveBtn) {
            activeDiv.style.display = "block";
            inactiveDiv.style.display = "none";
            activeBtn.style.backgroundColor = "white";
            activeBtn.style.color = "black";
            inactiveBtn.style.backgroundColor = "rgb(240, 240, 240)";
            inactiveBtn.style.color = "rgb(191, 191, 191)";
        }

        const forStudentsBtn = document.getElementById("student");
        const forOwnersBtn = document.getElementById("owner");
        const forStudentsDiv = document.getElementById("studentsDiv");
        const forOwnersDiv = document.getElementById("ownersDiv");
        const scrollToSectionButton = document.getElementById("get_start_btn");
        const scrollToSectionButtonTwo = document.getElementById("get_start_btn2");

        const sectionThree = document.getElementById("section_three");

        scrollToSectionButton.addEventListener("click", () => {
            sectionThree.scrollIntoView({ behavior: "smooth" });
        });

        scrollToSectionButtonTwo.addEventListener("click", () => {
            sectionThree.scrollIntoView({ behavior: "smooth" });
        });

        forStudentsBtn.addEventListener("click", () => {
            toggleView(
                forStudentsDiv,
                forOwnersDiv,
                forStudentsBtn,
                forOwnersBtn
            );
        });

        forOwnersBtn.addEventListener("click", () => {
            toggleView(
                forOwnersDiv,
                forStudentsDiv,
                forOwnersBtn,
                forStudentsBtn
            );
        });

        window.addEventListener("DOMContentLoaded", () => {
            forStudentsBtn.click();
        });
    </script>
</html>
