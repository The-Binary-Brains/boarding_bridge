<div class="listings">
    <div class="header">
        <div class="container_title">Listings</div>
        <a href="http://localhost:5000/owner/page/property/new">
            <div class="add_new">
                Add New
            </div>
        </a>
    </div>
    <div class="container_line"></div>
    <div class="table_container">
        <table>
            <colgroup>
                <col>
                <col>
                <col>
                <col>
                <col>
                <col>
            </colgroup>

            <thead>
                <tr>
                    <th>No.</th>
                    <th>Property</th>
                    <th>Submit for review</th>
                    <th>Published on</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (propertiesData.length === 0) { %>
                    <tr>
                        <td colspan="6" class="span_row">
                            You don't have any listings.
                        </td>
                    </tr>
                <% } else { %>
                    <% let i = 1 %>
                    <% propertiesData.forEach((property) => { %>
                        <% if (property.status === "published") { %>
                            <tr>
                                <td><%= i++ %></td>
                                <td>
                                    <div class="property">
                                        <img src="<%= property.image %>" alt="">
                                        <div class="title"><%= property.title %></div>
                                    </div>
                                </td>
                                <td><%= property.reviewDate %></td>
                                <td><%= property.publishedDate %></td>
                                <td><div class="active">Published</div></td>
                                <td>
                                    <a href="http://localhost:5000/owner/page/property/view/<%= property.id %>">Info</a>
                                    <a href="http://localhost:5000/owner/page/property/edit/<%= property.id %>">Edit</a>
                                    <button onclick="handlePropertyDelete('<%= property.id %>')">Delete</button>
                                </td>
                            </tr>
                        <% } else if (property.status === "pending") { %>
                            <tr>
                                <td><%= i++ %></td>
                                <td>
                                    <div class="property">
                                        <img src="<%= property.image %>" alt="">
                                        <div class="title"><%= property.title %></div>
                                    </div>
                                </td>
                                <td><%= property.reviewDate %></td>
                                <td><%= property.publishedDate %></td>
                                <td><div class="pending">Pending</div></td>
                                <td>-</td>
                            </tr>
                        <% } else if (property.status === "rejected") { %>
                            <tr>
                                <td><%= i++ %></td>
                                <td>
                                    <div class="property">
                                        <img src="<%= property.image %>" alt="">
                                        <div class="title"><%= property.title %></div>
                                    </div>
                                </td>
                                <td><%= property.reviewDate %></td>
                                <td><%= property.publishedDate %></td>
                                <td><div class="warning">Action Needed</div></td>
                                <td>
                                    <a href="http://localhost:5000/owner/page/property/solve/<%= property.id %>">Solve</a>
                                </td>
                            </tr>
                        <% } %>
                    <% }) %>
                <% } %>

            </tbody>
        </table>
    </div>
    <div class="overlay" id="overlay">
        <div class="content" id="overlayContent">
            <div class="title">
                Are you Sure?
            </div>
            <div class="warning">
                This can't be undone.
            </div>
            <div class="button_container">
                <button class="closeBtn"  id="closeBtn">
                    Go Back
                </button>
                <button class="deleteBtn" id="deleteBtn">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>
<script src="/js/owner_property.js"></script>
