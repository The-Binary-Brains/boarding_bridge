<div class="view_section">
    <div class="top-container">
        <div class="images-grid">
            <img src="<%= propertyData.propertyPhoto[0]%>">
            <img src="<%= propertyData.propertyPhoto[0]%>">
            <img src="<%= propertyData.propertyPhoto[0]%>">
            <img src="<%= propertyData.propertyPhoto[0]%>">
            <img src="<%= propertyData.propertyPhoto[0]%>">
        </div>
        <div class="input">
            <button id="gallery" type="button">
                <div class="gallery-btn">
                    <i class="fa-regular fa-images"></i>
                    <p>Show all photos...</p>
                </div>
            </button>
        </div>
    </div>
    <div class="main">
        <div class="left-container">
            <p class="Property-name">
                <%= propertyData.name + "  - (" + propertyData.propertyType + ")"%>
            </p>
            <p class="Property-details">
                <%= "occupancy " + propertyData.occupancy + " - distance " + propertyData.distance + " km" %>
            </p>
            <hr>
            <div class="owner">
                <div class="profile">
                    <img class="owner-img" src="<%= propertyData.propertyPhoto[0]%>">
                </div>
                <div class="owner-details">
                    <span class="name">
                        Hosted by <%= propertyData.ownerName %>
                    </span><br>
                    <span class="since">
                        Member since <%= propertyData.member %>
                    </span>
                </div>
            </div>
            <hr>
            <div class="price">
                <h1>
                    Price (Rs)
                </h1>
                <p>
                    <%= propertyData.price.toLocaleString() %>
                </p>
            </div>
            <hr>
            <div class="info">
                <h1>Description</h1>
                <p><%= propertyData.about %> </p>
            </div>
            <hr>
            <div class="facilities">
                <h1>What this place offers</h1>
                <div class="facilitity-container">
                    <% if (propertyData.amenities.length === 0) { %>
                        <div>No amenities yet</div>
                    <% } else { %>
                        <% if (propertyData.amenities.includes("wifi")) { %>
                            <div class="wrap-content">
                                <i class="fa-solid fa-wifi"></i>
                                <p>Wi-Fi</p>
                            </div>
                        <% } %>

                        <% if (propertyData.amenities.includes("kitchen")) { %>
                            <div class="wrap-content">
                                <i class="fa-solid fa-kitchen-set"></i>
                                <p>Kitchen</p>
                            </div>
                        <% } %>

                        <% if (propertyData.amenities.includes("bath")) { %>
                            <div class="wrap-content">
                                <i class="fa-solid fa-bath"></i>
                                <p>Attached Bathrooms</p>
                            </div>
                        <% } %>

                        <% if (propertyData.amenities.includes("food")) { %>
                            <div class="wrap-content">
                                <i class="fa-solid fa-utensils"></i>
                                <p>Food Arrangement</p>
                            </div>
                        <% } %>

                        <% if (propertyData.amenities.includes("washing_machine")) { %>
                            <div class="wrap-content">
                                <i class="fa-solid fa-soap"></i>
                                <p>Washing Machine</p>
                            </div>
                        <% } %>
                    <% } %>


                </div>
            </div>
            <hr>
            <div class="location">
                <h1>
                    Location
                </h1>
                <div class="Navigation">
                    <iframe src="https://www.google.com/maps?q=<%= propertyData.latitude %>,<%= propertyData.longitude %>&hl=es;z=14&output=embed" width="700" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
        <div class="right-container">
            <div class="contact">
                <div class="icon">
                    <i class="fa-solid fa-phone"></i>
                </div>
                <div class="info-container">
                    <h1>
                        Call Owner
                    </h1>
                    <p>
                        <%= propertyData.phone %>
                    </p>
                </div>
            </div>
            <hr>
            <div class="contact">
                <div class="icon">
                    <i class="fa-solid fa-envelope"></i>
                </div>
                <div class="info-container">
                    <h1>
                        Email
                    </h1>
                    <p>
                        <%= propertyData.email %>
                    </p>
                </div>
            </div>
            <hr>
            <div class="contact">
                <div class="icon">
                    <i class="fa-solid fa-envelope"></i>
                </div>
                <div class="info-container">
                    <h1>
                        Address
                    </h1>
                    <p>
                        <%= propertyData.address %>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
