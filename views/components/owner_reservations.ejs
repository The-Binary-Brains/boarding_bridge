<div class="listings">
    <div class="header">
        <div class="container_title">All reservations</div>
    </div>
    <div class="container_line"></div>
    <div class="table_container">
        <table>
            <colgroup>
                <col />
                <col />
                <col />
                <col />
                <col />
            </colgroup>

            <thead>
                <tr>
                    <th>No.</th>
                    <th>Property</th>
                    <th>Name</th>
                    <th>Apointment on</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (reservationData.length === 0) { %>
                <tr>
                    <td colspan="5">No reservations available.</td>
                </tr>
            <% } else { %>
                <% reservationData.forEach((reservation, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td>
                            <div class="property">
                                <img src="<%= reservation.property.image %>" alt="Property Image" />
                                <div class="title">
                                    <%= reservation.property.name %>
                                </div>
                            </div>
                        </td>
                        <td><%= reservation.student.firstName + " "+ reservation.student.lastName %></td>
                        <td><%= reservation.timestamp %></td>
                        <td>
                            <a href="http://localhost:5000/owner/page/reservations/view/<%= reservation.id %>">Info</a>
                            <button onclick='handleReservationCancel("<%= reservation.id %>")'>Cancel</button>
                        </td>
                    </tr>
                <% }); %>
            <% } %>
            </tbody>
        </table>
    </div>
    <div class="overlay" id="overlay">
        <div class="content" id="overlayContent">
            <div class="title">
                Are you Sure?
            </div>
            <div class="warning">
                This can't be undone.
            </div>
            <div class="button_container">
                <button class="closeBtn"  id="closeBtn">
                    Go Back
                </button>
                <button class="deleteBtn" id="deleteBtn">
                    Cancel Reservation
                </button>
            </div>
        </div>
    </div>
</div>

